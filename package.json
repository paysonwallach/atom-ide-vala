{
  "name": "ide-vala",
  "main": "./lib/main",
  "version": "0.2.0",
  "description": "Vala language support for Atom-IDE",
  "keywords": [
    "atom-ide",
    "vala",
    "lsp",
    "language-client"
  ],
  "repository": "https://github.com/naaando/ide-vala",
  "license": "GPL-3.0",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "test": "atom --test spec",
    "clean": "shx rm -rf dist",
    "babel": "npm run clean && shx cp -r src dist && cross-env NODE_ENV=development cross-env BABEL_KEEP_MODULES=false babel dist --out-dir dist",
    "dev": "npm run clean && cross-env NODE_ENV=development cross-env BABEL_KEEP_MODULES=true rollup -c -w",
    "build": "npm run clean && cross-env NODE_ENV=production cross-env BABEL_KEEP_MODULES=true rollup -c ",
    "build-commit": "build-commit -o dist",
    "bump": "ncu -u",
    "prepare": "npm run build"
  },
  "atomTestRunner": "./spec/runner",
  "activationHooks": [
    "ide-dlang:grammar-used"
  ],
  "engines": {
    "atom": ">=1.21.0"
  },
  "package-deps": [
    "language-vala-modern",
    "atom-ide-ui"
  ],
  "dependencies": {
    "atom-languageclient": "1.0.0",
    "atom-package-deps": "^7.0.2"
  },
  "devDependencies": {
    "atom-jasmine3-test-runner": "^5.1.5",
    "prettier": "^2.1.2",
    "eslint": "7.11.0",
    "eslint-config-atomic": "^1.5.0",
    "rollup": "^2.32.1",
    "rollup-plugin-atomic": "^1.6.2",
    "shx": "^0.3.2",
    "cross-env": "^7.0.2",
    "@babel/cli": "7.12.1",
    "@babel/core": "7.12.3",
    "babel-preset-atomic": "^2.5.4",
    "npm-check-updates": "9.1.2",
    "build-commit": "0.1.1"
  },
  "enhancedScopes": [
    "source.vala"
  ],
  "configSchema": {
    "vlsPath": {
      "type": "string",
      "title": "Vala language server path",
      "default": "vala-language-server",
      "description": "Use custom Vala language server path"
    }
  },
  "consumedServices": {
    "datatip": {
      "versions": {
        "0.1.0": "consumeDatatip"
      }
    },
    "linter-indie": {
      "versions": {
        "2.0.0": "consumeLinterV2"
      },
      "signature-help": {
        "versions": {
          "0.1.0": "consumeSignatureHelp"
        }
      }
    }
  },
  "providedServices": {
    "autocomplete.provider": {
      "versions": {
        "2.0.0": "provideAutocomplete"
      }
    },
    "definitions": {
      "versions": {
        "0.1.0": "provideDefinitions"
      }
    },
    "find-references": {
      "versions": {
        "0.1.0": "provideFindReferences"
      }
    },
    "outline-view": {
      "versions": {
        "0.1.0": "provideOutlines"
      }
    }
  }
}
